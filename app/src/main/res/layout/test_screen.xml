<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tolls="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appBar_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_screen"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circular"
            android:elevation="4dp"
            android:src="@drawable/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="@string/savollar"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar_ly"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            tolls:text="" />

        <RadioGroup
            android:id="@+id/radio_gr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/first_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="23sp"
                tolls:text="" />

            <RadioButton
                android:id="@+id/second_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                tolls:text="" />

            <RadioButton
                android:id="@+id/third_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                tolls:text="" />

            <RadioButton
                android:id="@+id/fourth_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                tolls:text="" />
        </RadioGroup>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/quiz_back_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#03A9F4"
        android:elevation="4dp"
        android:src="@drawable/back_button" />

    <ImageButton
        android:id="@+id/quiz_next_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#03A9F4"
        android:elevation="4dp"
        android:src="@drawable/baseline_navigate_next_24" />
</RelativeLayout>